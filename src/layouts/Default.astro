---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

const { title, description } = Astro.props
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>

    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
    <link rel="icon" type="image/png" href="/images/favicon.png">

    <link rel="preconnect" href="https://api.fontshare.com"/>
    <link rel="preconnect" href="https://cdn.fontshare.com"/>
    <link href="https://api.fontshare.com/css?f[]=satoshi@400,700,900&display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href={Astro.resolve('../styles/index.css')} />
    <!-- <script src="/js/airyx.js" type="module"></script> -->

    <title>airyxOS â€“ { title || 'Finesse of macOS. Freedom of FreeBSD.' }</title>
  </head>
  <body>
    <Header />

    <main class="main" role="main">
      {
        title && (
          <header class="u-container page-header">
            <h1 class="h2 page-header__title">{title}</h1>
            {description && <p class="page-header__desc">{ description }</p>}
          </header>
        )
      }
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  .main {
    margin: 0 auto;
    padding-top: calc(var(--header-space) + 2rem);
    max-width: 1440px;
  }

  .main > :global(*) + :global(*) {
    margin-block-start: 2rem;
  }

  .page-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;

    text-align: center;
  }

  .page-header__desc {
    max-width: 50ch;
    color: var(--color-text-muted);
  }
</style>
