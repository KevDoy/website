{% set dim = 128 %}
{% set dim_half = dim / 2 %}

{# `id` is a required and should be unique for all usages of logo on a page #}
{% macro logo(id) %}
  <svg class="logo" viewbox="0 0 {{ dim }} {{ dim }}" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <mask id="tree-{{ id }}">
        <rect width="{{ dim }}" height="{{ dim }}" fill="white"/>
        <path d="M73.691 30.82c5.147 0 9.14 2.223 11.977 6.667l-6.473 5.272c6.974-1.413 12.522-.43 16.644 2.946 4.121 3.377 6.182 7.34 6.182 11.89-3.265-1.916-6.529-2.874-9.793-2.874-3.265 0-6.523.958-9.777 2.873 3.38 3.54 5.07 7.287 5.07 11.243 0 3.955-1.69 6.648-5.07 8.08-2.69-4.51-5.609-7.968-8.76-10.373-3.15-2.406-6.432-3.682-9.843-3.828l-1.82 65.289c-2.669.005-5.958.002-8.329-.032l-1.775-65.257c-3.412.146-6.693 1.422-9.844 3.828-3.15 2.405-6.07 5.862-8.76 10.373-3.38-1.432-5.07-4.125-5.07-8.08 0-3.956 1.69-7.703 5.07-11.243-3.253-1.915-6.512-2.873-9.776-2.873-3.264 0-6.529.958-9.793 2.873 0-4.55 2.06-8.512 6.182-11.889 4.121-3.377 9.67-4.359 16.644-2.946l-6.474-5.272c2.838-4.444 6.83-6.667 11.977-6.667s10.416 3.234 15.806 9.701c5.39-6.467 10.659-9.7 15.805-9.7z" fill="black"/>
      </mask>

      <mask id="circle-{{ id }}">
        <rect width="{{ dim }}" height="{{ dim }}" fill="black"/>
        <circle cx="{{ dim_half }}" cy="{{ dim_half }}" r="{{ dim_half }}" fill="white"/>
      </mask>
    </defs>

    <g mask="url(#tree-{{ id }})">
      <rect class="logo__sky" width="{{ dim }}" height="{{ dim }}" mask="url(#circle-{{ id }})"/>
      <rect class="logo__land" y="{{ dim * 0.75 }}" width="{{ dim }}" height="{{ dim * 0.25 }}" mask="url(#circle-{{ id }})"/>
    </g>
  </svg>
{% endmacro %}
